        <div id="signUpBox" class="boxes fullBox" style="display: block !important; min-height: 400px;">
            <div class="box-content">
                <h3 style="font-size: 24px !important;">{{ 'wspot.confirmation.block_title'|trans }}</h3>

                <div class="content-center">
