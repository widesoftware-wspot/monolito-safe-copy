{% extends 'FrontendBundle::index.html.twig' %}

{% block container %}
    <section class="container singleBox">
        <div id="signUpBox" class="boxes fullBox" style="display: block !important; min-height: 400px;">
            <div class="box-content">
                <h3 style="font-size: 24px !important;">{{ 'wspot.validity_access.title'|trans }}</h3>

                <div class="content-center">
                    {{ 'wspot.validity_access.message_1'|trans }}<strong>{{ guest.properties.name|default('wspot.default.guest'|trans) }}</strong>.
                </div>

                <div class="content-center">
                    {{ 'wspot.validity_access.message_2'|trans }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}