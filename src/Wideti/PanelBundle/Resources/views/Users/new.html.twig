{% extends 'PanelBundle::layout.html.twig' %}

{% block content %}
    <h3 class="heading-mosaic">Usuários</h3>

    <div class="innerLR">
        <div class="widget widget-tabs border-bottom-none">
            <div class="widget-head">
                <ul>
                    <ul>
                        <li class="active"><a class="glyphicons edit" data-toggle="tab"><i></i>Incluir</a></li>
                    </ul>
                </ul>
            </div>
            <span id="message-error"></span>
            <div class="widget-body">
                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                {% form_theme form 'AdminBundle:Form:fields.html.twig' %}
                <div class="widget">
                    <div class="widget-head">
                        <h4 class="heading">Inclusão de novo usuário</h4>
                    </div>
                    <div class="widget-body">
                        {{ form_errors(form) }}
                        <div class="row-fluid" style="margin-top: 30px; margin-bottom: 30px;">
                            <div class="span6">
                                {{ form_row(form.username) }}

                                {{ form_row(form.nome) }}
                                {{ form_row(form.status) }}
                                {{ form_row(form.password) }}
                                {{ form_row(form.role) }}
                                {{ form_row(form.financial_manager) }}
                                {{ form_row(form.receive_report_mail) }}
                                {{ form_row(form.report_mail_language) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions right">
                <a href="{{ app.request.headers.get('referer') }}">
                    <button type="button" class="btn btn-icon btn-default glyphicons circle_remove"><i></i>
                        Cancelar
                    </button>
                </a>
                {{ form_widget(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="{{ asset('bundles/admin/theme/scripts/plugins/forms/chosen/chosen.css')}}" rel="stylesheet" />
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset(assets_path ~'/js/wspot.panel.user.validate.js')}}"></script>
{% endblock %}