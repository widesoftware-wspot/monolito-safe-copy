<!--[if IE 8]>    <html class="ie lt-ie9"> <![endif]-->
<!--[if gt IE 8]> <html class="ie gt-ie8"> <![endif]-->
<!--[if !IE]><!--><html><!-- <![endif]-->
<head>
    <title>Esqueci minha senha</title>

    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta http-equiv="X-UA-Compatible" content="IE=9; IE=8; IE=7; IE=EDGE" />

    <!-- Bootstrap -->
    <link href="{{ asset('bundles/admin/bootstrap/css/bootstrap.css')}}" rel="stylesheet" />
    <link href="{{ asset('bundles/admin/bootstrap/css/responsive.css')}}" rel="stylesheet" />

    <!-- Main Theme Stylesheet :: CSS -->
    <link href="{{ asset('bundles/admin/theme/css/style-light.css?1369414386')}}" rel="stylesheet" />
    {% include "AdminBundle::adminCustomColor.html.twig" %}
</head>
<body class="login">

<!-- Wrapper -->
<div id="login">

    {% if success %}
        <div class="form-signin">
            <h3>Senha Cadastrada com sucesso!!!</h3>

            <div class="row-fluid">
                <div class="span12">
                    <div class="inner">
                        <div class="row-fluid">
                            <h5>Clique no botão abaixo para realizar o login:</h5>
                            <div class="span3" style="margin-top: 20px;">
                                <a href="{{ path('login_admin') }}" class="btn btn-block btn-primary">Realizar Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <!-- Box -->
        <div class="form-signin">
            <h3>Definir nova senha</h3>

            <!-- Row -->
            <div class="row-fluid row-merge">

                <!-- Column -->
                <div class="span9">
                    <div class="inner">
                        <!-- Form -->
                        {{ form_start(form, {
                            'action': '',
                            'method': 'POST'
                        }) }}
                            <div class="row-fluid" style="margin: 0 0 0 0;">
                                <div class="span12">
                                    {{ form_row(form.password) }}
                                    <div class="control-group  ">
                                        {% for flashMessage in app.session.flashbag.get('success') %}
                                            <div class="strong" style="height: 20px; color: green;">
                                                {{ flashMessage }}
                                            </div>
                                        {% endfor %}
                                        {% for flashMessage in app.session.flashbag.get('error') %}
                                            <div class="strong error-login" style="height: 20px; color: red;">
                                                {{ flashMessage }}
                                            </div>
                                        {% endfor %}
                                        {% for flashMessage in app.session.flashbag.get('notice') %}
                                            <div class="strong" style="height: 20px; color: green;">
                                                {{ flashMessage }}
                                            </div>
                                        {% endfor %}

                                        <label class="control-label"></label>
                                        <div class="controls">
                                            <strong>Requisitos de senha:</strong> <br>
                                            • Conter no mínimo 8 caracteres <br>
                                            • Conter letras maiúsculas <br>
                                            • Conter letras minúsculas <br>
                                            • Conter números <br>
                                            • Conter caracteres especiais (ex: $%#@*) <br>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="row-fluid">
                                <div class="span4 center">
                                    <button class="btn btn-block btn-primary" type="submit">Salvar</button>
                                </div>
                            </div>
                        </form>
                        <!-- // Form END -->
                    </div>
                </div>
                <!-- // Column END -->
            </div>
            <!-- // Row END -->

        </div>
        <!-- // Box END -->
    {% endif %}

</div>
<!-- // Wrapper END -->

</body>
</html>
